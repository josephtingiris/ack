set default="0"

function load_video {
  insmod efi_gop
  insmod efi_uga
  insmod video_bochs
  insmod video_cirrus
  insmod all_video
}

load_video
set gfxpayload=keep
insmod gzio
insmod part_gpt
insmod ext2

terminal_output console
if [ x$feature_timeout_style = xy ] ; then
    set timeout_style=menu
    set timeout=60
    # Fallback normal timeout code in case the timeout_style feature is unavailable.
else
    set timeout=60
fi

search --no-floppy --set=root -l '##ACK_BUILD_ISO## [UEFI]'

menuentry 'Rescue ##ACK_BUILD_DISTRIBUTION## ##ACK_BUILD_VERSION## from ##ACK_INSTALL_SERVER##' --hotkey=R --class fedora --class gnu-linux --class gnu --class os --class ##ACK_LABEL## {
    linuxefi /images/pxeboot/vmlinuz inst.ks.sendmac inst.ks.sendsn noverifyssl inst.sshd console=##ACK_CLIENT_CONSOLE## inst.syslog=##ACK_INSTALL_SERVER## inst.stage2='##ACK_CLIENT_INSTALL_URL####ACK_CLIENT_INSTALL_URI##' rescue
    initrdefi /images/pxeboot/initrd.img
}

submenu 'Install ##ACK_BUILD_DISTRIBUTION## ##ACK_BUILD_VERSION## from ##ACK_INSTALL_SERVER##' --hotkey=I {

    menuentry 'Install ##ACK_BUILD_DISTRIBUTION## ##ACK_BUILD_VERSION## from ##ACK_INSTALL_SERVER## [DHCP]' --hotkey=D --class fedora --class gnu-linux --class gnu --class os --class ##ACK_LABEL## {
        linuxefi /images/pxeboot/vmlinuz inst.ks.sendmac inst.ks.sendsn noverifyssl inst.sshd console=##ACK_CLIENT_CONSOLE## inst.syslog=##ACK_INSTALL_SERVER## inst.ks='##ACK_CLIENT_INSTALL_URL##/?build=##ACK_CLIENT_BUILD_URI##&install=##ACK_CLIENT_INSTALL_URI####ACK_PARAMETER##'
        initrdefi /images/pxeboot/initrd.img
    }

    menuentry 'Install ##ACK_BUILD_DISTRIBUTION## ##ACK_BUILD_VERSION## from ##ACK_INSTALL_SERVER## [STATIC IP]' --hotkey=S --class fedora --class gnu-linux --class gnu --class os --class ##ACK_LABEL## {
        # ip=ip::gateway:netmask:hostname:interface:none
        linuxefi /images/pxeboot/vmlinuz inst.ks.sendmac inst.ks.sendsn noverifyssl inst.sshd console=##ACK_CLIENT_CONSOLE## inst.syslog=##ACK_INSTALL_SERVER## inst.ks='##ACK_CLIENT_INSTALL_URL##/?build=##ACK_CLIENT_BUILD_URI##&install=##ACK_CLIENT_INSTALL_URI####ACK_PARAMETER##' dns=1.1.1.1 ip=1.2.3.4::1.2.3.1:255.255.255.0::eth0:none
        initrdefi /images/pxeboot/initrd.img
    }

}

